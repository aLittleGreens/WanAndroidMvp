<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/actionbarex_common_rl_title_bar_search"
    style="@style/actionbarex_common_action_bar">

    <LinearLayout
        android:id="@+id/actionbarex_common_ll_left"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true">

        <per.goweii.actionbarex.common.ActionIconView
            android:id="@+id/actionbarex_common_iv_left"
            style="@style/actionbarex_common_action_bar_icon"
            android:visibility="gone"
            tools:src="#000000"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/actionbarex_common_tv_left"
            style="@style/actionbarex_common_action_bar_text"
            android:visibility="gone"
            tools:text="返回"
            tools:visibility="visible" />

    </LinearLayout>

    <EditText
        android:id="@+id/actionbarex_common_et_title"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/actionbarex_common_ll_left"
        android:layout_toLeftOf="@+id/actionbarex_common_ll_right"
        android:background="@null"
        android:singleLine="true"
        android:layout_centerInParent="true"/>

    <LinearLayout
        android:id="@+id/actionbarex_common_ll_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true">

        <TextView
            android:id="@+id/actionbarex_common_tv_right"
            style="@style/actionbarex_common_action_bar_text"
            android:visibility="gone"
            tools:text="搜索"
            tools:visibility="visible" />

        <per.goweii.actionbarex.common.ActionIconView
            android:id="@+id/actionbarex_common_iv_right"
            style="@style/actionbarex_common_action_bar_icon"
            android:visibility="gone"
            tools:src="#000000"
            tools:visibility="visible" />

    </LinearLayout>

</RelativeLayout>