<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".TestActivity">

    <androidx.viewpager.widget.ViewPager
            android:id="@+id/vp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            android:scrollbars="none" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/bottom_bar_height"
            android:layout_gravity="bottom"
            android:baselineAligned="false"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="horizontal"
            android:background="@color/bottom_bar_overlay"
            >

        <LinearLayout
                android:id="@+id/ll_bb_home"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="3dp"
                android:paddingBottom="3dp">

            <ImageView
                    android:id="@+id/iv_bb_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_home_normal"
                    />

            <TextView
                    android:id="@+id/tv_bb_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="首页"
                    android:textColor="@color/text_gray_light"
                    android:textSize="10dp" />

        </LinearLayout>


        <LinearLayout
                android:id="@+id/ll_bb_knowledge"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="3dp"
                android:paddingBottom="3dp">

            <ImageView
                    android:id="@+id/iv_bb_knowledge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_book_normal"
                    />

            <TextView
                    android:id="@+id/tv_bb_knowledge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="体系"
                    android:textColor="@color/text_gray_light"
                    android:textSize="10dp" />

        </LinearLayout>

        <LinearLayout
                android:id="@+id/ll_bb_wechat"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="3dp"
                android:paddingBottom="3dp">

            <ImageView
                    android:id="@+id/iv_bb_wechat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_wechat_normal"
                    />

            <TextView
                    android:id="@+id/tv_bb_wechat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="公众号"
                    android:textColor="@color/text_gray_light"
                    android:textSize="10dp" />

        </LinearLayout>

        <LinearLayout
                android:id="@+id/ll_bb_project"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="3dp"
                android:paddingBottom="3dp">

            <ImageView
                    android:id="@+id/iv_bb_project"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_project_normal"
                   />

            <TextView
                    android:id="@+id/tv_bb_project"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="项目"
                    android:textColor="@color/text_gray_light"
                    android:textSize="10dp" />

        </LinearLayout>

        <LinearLayout
                android:id="@+id/ll_bb_mine"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="3dp"
                android:paddingBottom="3dp">

            <ImageView
                    android:id="@+id/iv_bb_mine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_mine_normal"
                   />

            <TextView
                    android:id="@+id/tv_bb_mine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="我的"
                    android:textColor="@color/text_gray_light"
                    android:textSize="10dp" />

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>